<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Fuzzy Driver Commands"
            id="org.fuzzydriver.plugin.commands.category">
      </category>
      <command
            name="Run Fuzzy Driver"
            categoryId="org.fuzzydriver.plugin.commands.category"
            id="org.fuzzydriver.plugin.commands.runFuzzyDriver">
      </command>
   </extension>
   
   <extension
   		point="org.eclipse.ui.views">
   		<view id="org.fuzzydriver.plugin.views.FuzzyDriverView"
   			name="Fuzzy Driver View"
   			class="org.fuzzydriver.plugin.views.FuzzyDriverView"
   			icon="icons/sample.png"/>
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.fuzzydriver.plugin.commands.runFuzzyDriver"
            class="org.fuzzydriver.plugin.handlers.FuzzyDriverHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.fuzzydriver.plugin.commands.runFuzzyDriver"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   
   <extension point="org.eclipse.ui.popupMenus"> 
	   	<viewerContribution 
	      	id="org.eclipse.ui.articles.action.contribution.popup.navigator"
	   		targetID="#CompilationUnitEditorContext"> 
	      	<action
	      		class="org.fuzzydriver.plugin.actions.FuzzyDriverAction"
	      		id=""
	      		label="Run Fuzzy Driver"
	      		icon="icons/holmes.png"
	      		menubarPath="additions">
	      	</action>
	   	</viewerContribution>
	</extension>
	
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Fuzzy Driver"
               mnemonic="M"
               id="org.fuzzydriver.plugin.menus.fuzzyDriver">
            <command
                  commandId="org.fuzzydriver.plugin.commands.runFuzzyDriver"
                  mnemonic="S"
                  id="org.fuzzydriver.plugin.menus.runFuzzyDriver">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.fuzzydriver.plugin.toolbars.sampleToolbar">
            <command
                  commandId="org.fuzzydriver.plugin.commands.runFuzzyDriver"
                  icon="icons/sample.png"
                  tooltip="Run Fuzzy Driver"
                  id="org.fuzzydriver.plugin.toolbars.runFuzzyDriver">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
